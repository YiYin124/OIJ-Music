            <br />
            <br />
            <label id="login-password-input">
                <span>密码</span>
                <br />
                <input name="password" type="password" title="请输入你的登录密码" />
            </label>
            <br />
            <br />
            <label id="login-autologin-checkbox">
                <span>记住我(请不要在公共电脑勾选此项)</span>
                <input name="remember" type="checkbox" title="勾选此项下次就不用重复登录了" />
            </label>
        </form>
    </div>
}