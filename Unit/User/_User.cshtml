@if (Page.IsLogin)
{
    <script>
        $(function () {
            var IsLoginOut = false;

            $("#user-menu").menu().hide();
            $("#user-gravatar").hover(function () {
                var menu = $("#user-menu");
                var img = $("#user-gravatar > img");
                // JQ UI 定位有点奇怪
                menu.css("left", img.offset().left);
                menu.css("top", img.offset().top + img.outerHeight());
                menu.show("fade");
            }, function () {
                var menu = $("#user-menu");
                menu.hide("fade");
            });

            $("#loginout-dialog").dialog({
                resizable: false,
                autoOpen: false,
                modal: true,
                show: {
                    effect: "drop",
                    //duration: 500
                },
                hide: {
                    effect: "drop",
                    //duration: 500
                },
                buttons: {
                    "确定": function () {
                        IsLoginOut = true;
                        $(this).dialog("close");
                    },
                },
                close: function () {
                    // 关闭窗口后刷新页面
                    if (IsLoginOut)
                        window.location.reload();
                }
            });

            $("#user-loginout-btn").click(function () {
                // Ajax 注销
                $.ajax("/Account/Ajax/LoginOut.cshtml").done(function () {
                    $("#loginout-dialog").dialog("open");
                });
            });
        });
    </script>
}
else
{
    <script>
        $(function () {
            // UI
            var IsLogin = false;
            $("#login-alert-box").hide();
            $("#register-login-btn").buttonset();

            $("#login-btn").click(function () {
                $("#login-dialog").dialog("open");
            });

            $("#register-btn").click(function () {
                $("#register-dialog").dialog("open");
            });

            // 有点小问题暂时先去掉
            //$("#login-form [title]").tooltip({
            //    position: {
            //        my: "left top",
            //        at: "left bottom",
            //    },
            //});

            $("#login-dialog").dialog({
                autoOpen: false,
                resizable: false,
                modal: true,
                show: {
                    effect: "drop",
                    //duration: 500
                },
                hide: {
                    effect: "drop",
                    //duration: 500
                },
                close: function () {
                    // 关闭窗口后刷新页面
                    if (IsLogin)
                        window.location.reload();
                },
                buttons: {
                    "登录": function () {
                        var loginAlertBox = $("#login-alert-box");
                        var loginAlertText = $("#login-alert-text");
                        var loginNameInput = $("#login-name-input > input");
                        var loginPasswordInput = $("#login-password-input > input");

                        loginAlertBox.hide("clip");
                        loginAlertText.text("");

                        if (loginNameInput.val() == "") {
                            loginAlertText.text("账户名不能为空");
                            loginAlertBox.show("clip");
                            return;
                        }

                        if (loginNameInput.val().length < 2) {
                            loginAlertText.text("账户名长度不正确");
                            loginAlertBox.show("clip");
                            return;
                        }

                        if (loginPasswordInput.val() == "") {
                            loginAlertText.text("密码不能为空");
                            loginAlertBox.show("clip");
                            return;
                        }

                        if (loginPasswordInput.val().length < 6) {
                            loginAlertText.text("密码长度不正确");
                            loginAlertBox.show("clip");
                            return;
                        }

                        // 对密码进行摘要
                        loginPasswordInput.val(CryptoJS.SHA3(loginPasswordInput.val()));

                        $("#login-form").ajaxSubmit(function (responseText, statusText) {
                            if (statusText == "success") {
                                var json = eval("(" + responseText + ")");
                                if (json.IsOk) {
                                    loginNameInput.attr("disabled", "disabled");
                                    loginPasswordInput.attr("disabled", "disabled");
                                    IsLogin = true;
                                    $("#login-dialog").dialog("close");
                                } else {
                                    loginAlertText.text(json.reason);
                                    loginAlertBox.show("clip");
                                }
                            } else {
                                loginAlertText.text("与服务器连接丢失请重试");
                                loginAlertBox.show("clip");
                            }
                        });
                    }
                }
            });

            $("#register-dialog").dialog({
                autoOpen: false,
                resizable: false,
                modal: true,
                show: {
                    effect: "drop",
                },
                hide: {
                    effect: "drop",
                },
                close: function () {
                    //if (IsLogin)
                    //    window.location.reload();
                },
            });

            $("#register-submit-tip").hide();
            // 设置无进度状态栏
            $("#register-submit-progressbar").progressbar({
                value: false,
            });
            $("#register-submit-progressbar").hide();


            $("#register-submit-button").button({
                icons: {
                    primary: "ui-icon-mail-closed"
                }
            }).click(function () {

                var registerSubmitButton = $(this);

                // 还原
                $("#register-submit-tip").hide();
                $("#register-submit-tip").removeClass("ui-state-highlight");
                $("#register-submit-tip").removeClass("ui-state-error");
                $("#register-submit-tip span:first").removeClass("ui-icon-circle-close");
                $("#register-submit-tip span:first").removeClass("ui-icon-circle-check");

                var registerNameInput = $("#register-name-input > input");
                var registerMailInput = $("#register-mail-input > input");
                var registerPasswordInput = $("#register-password-input > input");
                var registerRePasswordInput = $("#register-re-password-input > input");

                registerNameInput.removeAttr("disabled");
                registerMailInput.removeAttr("disabled");
                registerPasswordInput.removeAttr("disabled");
                registerRePasswordInput.removeAttr("disabled");

                if (validationStatus.mail & validationStatus.name & validationStatus.password & validationStatus.repassword) {
                    // 对密码进行一次算法摘要
                    $("#register-password-input > input").val(CryptoJS.SHA3($("#register-password-input > input").val()));
                    $("#register-submit-progressbar").show();
                    $("#register-form").ajaxSubmit(function (responseText, statusText) {
                        $("#register-submit-progressbar").hide();
                        if (statusText == "success") {
                            var json = eval("(" + responseText + ")");
                            if (json.IsOk) {
                                $("#register-submit-tip").addClass("ui-state-highlight");
                                $("#register-submit-tip span:first").addClass("ui-icon-circle-check");
                                $("#register-submit-tip span:last").text("验证邮件发送成功");
                                $("#register-submit-tip").show();
                            } else {
                                $("#register-submit-tip").addClass("ui-state-error");
                                $("#register-submit-tip span:first").addClass("ui-icon-circle-close");
                                $("#register-submit-tip span:last").text("请求失败 原因:" + json.reason);
                                $("#register-submit-tip").show();
                            }
                        }
                        else {
                            $("#register-submit-tip").addClass("ui-state-error");
                            $("#register-submit-tip span:first").addClass("ui-icon-circle-close");
                            $("#register-submit-tip span:last").text("与服务器连接丢失请重试");
                            $("#register-submit-tip").show();
                        }
                        registerSubmitButton.button("option", "label", "重新发送");
                        registerSubmitButton.button("option", "disabled", false);
                    });

                    registerNameInput.attr("disabled", "disabled");
                    registerMailInput.attr("disabled", "disabled");
                    registerPasswordInput.attr("disabled", "disabled");
                    registerRePasswordInput.attr("disabled", "disabled");

                    registerSubmitButton.button("option", "disabled", true);
                } else {
                    $("#register-submit-tip").addClass("ui-state-error");
                    $("#register-submit-tip span:first").addClass("ui-icon-circle-close");
                    $("#register-submit-tip span:last").text("注册信息不满足要求");
                    $("#register-submit-tip").show();
                }
            });

            // 输入控件状态初始化
            var validationStatus = {
                name: false,
                mail: false,
                password: false,
                repassword: false
            };

            $("#register-name-tip").hide();
            $("#register-mail-tip").hide();
            $("#register-password-tip").hide();
            $("#register-re-password-tip").hide();

            // 名称验证
            $("#register-name-input > input").keyup(function () {
                var registerNameInput = $(this);

                // 还原
                $("#register-name-tip").hide();
                $("#register-name-tip").removeClass("ui-state-highlight");
                $("#register-name-tip").removeClass("ui-state-error");
                $("#register-name-tip span:first").removeClass("ui-icon-circle-close");
                $("#register-name-tip span:first").removeClass("ui-icon-circle-check");

                if (registerNameInput.val().length >= 2 && registerNameInput.val().length <= 10) {
                    if (nameFormatValidation(registerNameInput.val())) {
                        $.getJSON("/Account/Ajax/Register.cshtml", { name: registerNameInput.val() }).done(function (data) {
                            if (data.IsOk) {
                                validationStatus.name = true;
                                $("#register-name-tip").addClass("ui-state-highlight");
                                $("#register-name-tip span:first").addClass("ui-icon-circle-check");
                                $("#register-name-tip span:last").text("这个名字可以使用");
                                $("#register-name-tip").show();
                            } else {
                                validationStatus.name = false;
                                $("#register-name-tip").addClass("ui-state-error");
                                $("#register-name-tip span:first").addClass("ui-icon-circle-close");
                                $("#register-name-tip span:last").text("这个名字已经有别人在用了");
                                $("#register-name-tip").show();
                            }
                        }).error(function () {
                            $("#register-name-tip").addClass("ui-state-error");
                            $("#register-name-tip span:first").addClass("ui-icon-circle-close");
                            $("#register-name-tip span:last").text("服务器通信异常");
                            $("#register-name-tip").show();
                        });
                    } else {
                        validationStatus.name = false;
                        $("#register-name-tip").addClass("ui-state-error");
                        $("#register-name-tip span:first").addClass("ui-icon-circle-close");
                        $("#register-name-tip span:last").text("名称含有非法字符");
                        $("#register-name-tip").show();
                    }
                } else {
                    validationStatus.name = false;
                    $("#register-name-tip").addClass("ui-state-error");
                    $("#register-name-tip span:first").addClass("ui-icon-circle-close");
                    $("#register-name-tip span:last").text("名称必须是 2~10 个字符组成");
                    $("#register-name-tip").show();
                }
            });

            // 邮箱验证
            $("#register-mail-input > input").keyup(function () {
                var registerMailInput = $(this);

                // 还原
                $("#register-mail-tip").hide();
                $("#register-mail-tip").removeClass("ui-state-highlight");
                $("#register-mail-tip").removeClass("ui-state-error");
                $("#register-mail-tip span:first").removeClass("ui-icon-circle-close");
                $("#register-mail-tip span:first").removeClass("ui-icon-circle-check");

                if (mailFormatValidation(registerMailInput.val())) {
                    $.getJSON("/Account/Ajax/Register.cshtml", { mail: registerMailInput.val() }).done(function (data) {
                        if (data.IsOk) {
                            validationStatus.mail = true;
                            $("#register-mail-tip").addClass("ui-state-highlight");
                            $("#register-mail-tip span:first").addClass("ui-icon-circle-check");
                            $("#register-mail-tip span:last").text("这个邮箱可以使用");
                            $("#register-mail-tip").show();
                        } else {
                            validationStatus.mail = false;
                            $("#register-mail-tip").addClass("ui-state-error");
                            $("#register-mail-tip span:first").addClass("ui-icon-circle-close");
                            $("#register-mail-tip span:last").text("这个邮箱已经注册过了");
                            $("#register-mail-tip").show();
                        }
                    }).error(function () {
                        $("#register-mail-tip").addClass("ui-state-error");
                        $("#register-mail-tip span:first").addClass("ui-icon-circle-close");
                        $("#register-mail-tip span:last").text("服务器通信异常");
                        $("#register-mail-tip").show();
                    });
                } else {
                    validationStatus.mail = false;
                    $("#register-mail-tip").addClass("ui-state-error");
                    $("#register-mail-tip span:first").addClass("ui-icon-circle-close");
                    $("#register-mail-tip span:last").text("邮箱格式不正确");
                    $("#register-mail-tip").show();
                }
            });

            // 密码验证
            $("#register-password-input > input").keyup(function () {
                var registerPasswordInput = $(this);

                // 还原
                $("#register-password-tip").hide();
                $("#register-password-tip").removeClass("ui-state-highlight");
                $("#register-password-tip").removeClass("ui-state-error");
                $("#register-password-tip span:first").removeClass("ui-icon-circle-close");
                $("#register-password-tip span:first").removeClass("ui-icon-circle-check");

                $("#register-re-password-input > input").clearInputs();
                if (registerPasswordInput.val().length >= 6 && registerPasswordInput.val().length <= 32) {
                    switch (passwordFormatValidation(registerPasswordInput.val())) {
                        case 1:
                            validationStatus.password = true;
                            $("#register-password-tip").addClass("ui-state-highlight");
                            $("#register-password-tip span:first").addClass("ui-icon-circle-check");
                            $("#register-password-tip span:last").text("密码等级: 低");
                            $("#register-password-tip").show();
                            break;
                        case 2:
                            validationStatus.password = true;
                            $("#register-password-tip").addClass("ui-state-highlight");
                            $("#register-password-tip span:first").addClass("ui-icon-circle-check");
                            $("#register-password-tip span:last").text("密码等级: 中");
                            $("#register-password-tip").show();
                            break;
                        case 3:
                            validationStatus.password = true;
                            $("#register-password-tip").addClass("ui-state-highlight");
                            $("#register-password-tip span:first").addClass("ui-icon-circle-check");
                            $("#register-password-tip span:last").text("密码等级: 高");
                            $("#register-password-tip").show();
                            break;
                        default:
                            validationStatus.password = false;
                            $("#register-password-tip").addClass("ui-state-error");
                            $("#register-password-tip span:first").addClass("ui-icon-circle-close");
                            $("#register-password-tip span:last").text("密码含有非法字符");
                            $("#register-password-tip").show();
                            break;
                    }
                } else {
                    validationStatus.password = false;
                    $("#register-password-tip").addClass("ui-state-error");
                    $("#register-password-tip span:first").addClass("ui-icon-circle-close");
                    $("#register-password-tip span:last").text("密码长度必须是 6~32 位");
                    $("#register-password-tip").show();
                }
            });

            // 密码二次验证
            $("#register-re-password-input > input").keyup(function () {
                var registerRePasswordInput = $(this);

                // 还原
                $("#register-re-password-tip").hide();
                $("#register-re-password-tip").removeClass("ui-state-highlight");
                $("#register-re-password-tip").removeClass("ui-state-error");
                $("#register-re-password-tip span:first").removeClass("ui-icon-circle-close");
                $("#register-re-password-tip span:first").removeClass("ui-icon-circle-check");

                if (validationStatus.password) {
                    if ($("#register-password-input > input").val() == registerRePasswordInput.val()) {
                        validationStatus.repassword = true;
                        $("#register-re-password-tip").addClass("ui-state-highlight");
                        $("#register-re-password-tip span:first").addClass("ui-icon-circle-check");
                        $("#register-re-password-tip span:last").text("通过");
                        $("#register-re-password-tip").show();
                    } else {
                        validationStatus.repassword = false;
                        $("#register-re-password-tip").addClass("ui-state-error");
                        $("#register-re-password-tip span:first").addClass("ui-icon-circle-close");
                        $("#register-re-password-tip span:last").text("两次密码输入不一致");
                        $("#register-re-password-tip").show();
                    }
                } else {
                    validationStatus.repassword = false;
                }
            });
        });
    </script>
}
<div id="user-box">
    @if (Page.IsLogin)
    {
        <div>
            <div id="user-info">
                <span>@AccountName</span>
            </div>
            <div id="user-gravatar">
                @Gravatar.GetHtml(@AccountEmail)
                <ul id="user-menu">
                    <li>
                        <a id="user-info-btn">
                            <span class="ui-icon ui-icon-person"></span>
                            个人信息
                        </a>
                    </li>
                    <li>
                        <a id="user-loginout-btn">
                            <span class="ui-icon ui-icon-close"></span>
                            注销
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <div id="register-login-btn">
            <a id="register-btn">注册</a>
            <a id="login-btn">登录</a>
        </div>
    }
</div>

@if (Page.IsLogin)
{
    <div id="loginout-dialog" title="注销">
        <p>
            @*<span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>*@
            你确定要注销这个账户嘛?
        </p>
    </div>
}
else
